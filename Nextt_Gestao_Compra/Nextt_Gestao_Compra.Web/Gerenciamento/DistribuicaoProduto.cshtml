@{
    Layout = "~/_LayoutPrincipal.cshtml";
}
<script src="../Assets/js/plugins/moment.min.js"></script>
<script src="../Assets/js/distribuicao-produto.js"></script>
<div class="col-md-12 col-sm-12 col-xs-12" id="principal">

    <div class="row">
        <div class="col-md-1 col-sm-1 col-xs-12">
            <h5><strong>Código</strong></h5>
            <h5>123456789</h5>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
            <h5><strong>Descrição</strong></h5>
            <h5>Teste Mock Descriçao</h5>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
            <h5><strong>Descrição Reduzida</strong></h5>
            <h5>Teste Mock Descriçao Reduzida</h5>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
            <h5><strong>Marca</strong></h5>
            <h5>Teste Mock Marca</h5>
        </div>
        <div class="col-md-1 col-sm-1 col-xs-12">
            <div class="controls">
                <button class="btn btn-primary " style="vertical-align:bottom !important;margin-top:20px !important" onclick="criarDistribuicao()">Novo</button>
            </div>
        </div>
        <div class="col-md-1 col-sm-1 col-xs-12">
            <div class="controls">
                <button style="vertical-align:bottom !important;margin-top:20px !important"  onclick="retornarPesquisa()" class="btn btn-info">Voltar</button>
            </div>
        </div>
        </div>
    <div class="row">
        <h5><strong>Histórico de Distribuição</strong></h5>
        <div class="col-md-12 col-sm-12 col-xs-12 table-responsive" style="max-height:70vh;overflow-y:auto">
            <table id="tabelaHitorico" cellpadding="0" cellspacing="0" class="cell-border hover table cell nowrap stripe compact pretty">
                <thead>
                    <tr>
                        <th style="border:1px solid black;border-bottom:2px solid black">ID Produto</th>
                        <th style="border:1px solid black;border-bottom:2px solid black">Dt. Distribuição</th>
                        <th style="border:1px solid black;border-bottom:2px solid black">Qtd. Packs</th>
                        <th style="border:1px solid black;border-bottom:2px solid black">Qtd. Grade</th>
                        <th style="border:1px solid black;border-bottom:2px solid black">Qtd. Itens</th>
                        <th style="border:1px solid black;border-bottom:2px solid black">Qtd. Packs Distr.</th>
                        <th style="border:1px solid black;border-bottom:2px solid black">Qtd. Itens Distr.</th>
                        <th style="border:1px solid black;border-bottom:2px solid black">Detalhe</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div class="bg_load"></div>
<div class="wrapper">
    <div class="inner">
        <span class="wait">
            <span>A</span>
            <span>g</span>
            <span>u</span>
            <span>a</span>
            <span>r</span>
            <span>d</span>
            <span>e</span>
        </span>
        <span class="resized ocultarElemento">
            <span>A</span>
            <span>j</span>
            <span>u</span>
            <span>s</span>
            <span>t</span>
            <span>a</span>
            <span>n</span>
            <span>d</span>
            <span>o</span>
        </span>
    </div>
</div>